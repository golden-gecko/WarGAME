
material energy_shield
{
	receive_shadows off

	technique
	{
		pass
		{
			cull_hardware none
			cull_software none
			depth_write off
			fog_override true
			polygon_mode wireframe
			scene_blend alpha_blend

			ambient 1.0 0.5 0.5 0.15
			diffuse 0.0 0.0 0.0 0.15
		}

		pass
		{
			cull_hardware none
			cull_software none
			depth_write off
			fog_override true
			scene_blend alpha_blend


			ambient 1.0 1.0 0.5 0.05
			diffuse 0.0 0.0 0.0 0.05
		}
	}
}
